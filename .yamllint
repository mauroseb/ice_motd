---
extends: default
rules:
  line-length:
    max: 256
    level: warning
  document-start: disable
  braces:
    forbid: false
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: consistent
    indent-sequences: false
    check-multi-line-strings: false
  truthy:
    allowed-values:
    - 'true'
    - 'false'
    check-keys: true
    ignore: |
      .github/workflows
